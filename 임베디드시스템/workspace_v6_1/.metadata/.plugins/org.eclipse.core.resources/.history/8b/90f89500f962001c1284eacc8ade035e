					time++;
					if(time==500000){

						WRITE_FND(6,seg6num);
						seg6num++;
						if(seg6num==5){
							delay(1000000);
							set5on=1;
							WRITE_FND(5,1);
							delay(3000000);
							WRITE_FND(5,2);
							seg6num=0;
							if(check_play==1){
								GPIO_WRITE(GPIO_PORTD, 0x10, 0x10);
								Play(PlayList[index]);
								DelayForPlay(DLY_8);
